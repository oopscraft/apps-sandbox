<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.oopscraft.apps.module.batch.sample.dao.SampleMapper">

    <select id="selectSamples" resultType="org.oopscraft.apps.module.batch.sample.dto.SampleVo">
        <![CDATA[
        select  id,
                name,
                number,
                long_number,
                double_number,
                big_decimal,
                sql_date,
                util_date,
                timestamp,
                local_date_time,
                local_date,
                data
        from    sandbox_sample
        limit   #{limit}
        ]]>
    </select>

    <select id="selectSample" resultType="org.oopscraft.apps.module.batch.sample.dto.SampleVo">
        <![CDATA[
        select  id,
                name,
                number,
                long_number,
                double_number,
                big_decimal,
                sql_date,
                util_date,
                timestamp,
                local_date_time,
                local_date,
                data
        from    sandbox_sample
        where   id = #{id}
        ]]>
    </select>

    <insert id="insertSample">
        <![CDATA[
        insert into sandbox_sample (
                id,
                name,
                number,
                long_number,
                double_number,
                big_decimal,
                sql_date,
                util_date,
                timestamp,
                local_date_time,
                local_date,
                data
        ) values (
                #{id},
                #{name},
                #{number},
                #{longNumber},
                #{doubleNumber},
                #{bigDecimal},
                #{sqlDate},
                #{utilDate},
                #{timestamp},
                #{localDateTime},
                #{localDate},
                #{data}
        )
        ]]>
    </insert>

    <delete id="deleteSampleAll">
        <![CDATA[
        delete from sandbox_sample
        ]]>
    </delete>

    <select id="selectSampleCount" resultType="int">
        <![CDATA[
        select  count(*)
        from    sandbox_sample
        ]]>
    </select>

</mapper>